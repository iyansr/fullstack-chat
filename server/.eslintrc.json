{
   "extends": [
      "universe/node",
      "universe/shared/typescript-analysis"
   ],
   "rules": {
      "@typescript-eslint/consistent-type-imports": "error",
      "prettier/prettier": [
         "error",
         {
            "endOfLine": "auto"
         }
      ]
   },
   "overrides": [
      {
         "files": [
            "*.ts",
            "*.tsx",
            "*.d.ts"
         ],
         "parserOptions": {
            "project": "./tsconfig.json"
         }
      }
   ]
}