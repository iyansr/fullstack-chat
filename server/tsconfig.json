{
   "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "sourceMap": true,
      "rootDir": "./src",
      "baseUrl": "./src",
      "paths": {
         "@/*": [
            "*"
         ]
      }
   },
   "include": [
      "./src/**/*",
      "./src/**/*.json"
   ],
   "ts-node": {
      "require": [
         "tsconfig-paths/register"
      ]
   },
   "exclude": [
      "node_modules",
      ".dev",
      ".env",
      "dist"
   ]
}